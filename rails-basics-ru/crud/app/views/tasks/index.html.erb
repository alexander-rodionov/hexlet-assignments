<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
    <table style="border:1px solid black">
  <% @tasks.each do |task| %>
      <tr style="border:1px solid black">
        <td><%= task.id %></td>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.creator %></td>
      <td><%= task.performer %></td>
      <td><%= task.completed %></td>
      <td><%= button_to "Edit", edit_task_path(task.id), method: :get %> </td>
      <td><%= button_to "Destroy", task_path(task.id), method: :delete %></td></tr>
</td>
  <% end %>
    </table>
</div>

<%= link_to "New task", new_task_path %>
